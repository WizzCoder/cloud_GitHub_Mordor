package ui;

import java.util.Scanner;

public class UI_Menu {

	private String[] myAvailableCommands = {"ADD","LIST","MARK","REMOVE",
			"REMOVE ALL DONE ToDo Items","SEARCH","EDIT","EXIT"};	


	public static void mainMenu(){
	
	
		
		
		
		
		
		
		
		
		
		
		Scanner sc = new Scanner(System.in);
		while (true)
		{
			
			
			int keybInput = sc.nextInt();
			
			
			switch(keybInput)
				{
				case 1: execADD();
						break; // CREATE

				case 2: execLIST();
						break; // RETRIVE
						
				case 3: execMARK();
						break; // UPDATE
						
				case 4: execREMOVE();
						break;
			
				case 5: execREMOVE_ALL();
						break;
				
				
				
				
				case 6: execMARK();
						break;

				
				
				
				
				
				
				
				case 7: execSEARCH();
				break;
				
			
				case 3: execMARK();
				break;
			
				case 4: execMARK();
				break;
			
				case 7: execREMOVE_ALL();
				break;
			
				case 0: execEXIT();
				break;

				
				case 8: execSEARCH();
				break;
				
				
				
				}
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		}


}
	
	
	
	


	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	public static void drawMenu(){
		// Draw menu
	}
	
	
}
